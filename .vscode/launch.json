    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'betterletters' using 'German'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=betterletters",
                    "--package=betterletters"
                ],
                "filter": {
                    "name": "betterletters",
                    "kind": "bin"
                }
            },
            "args": [
                "german"
            ],
            "stdio": [
                ".vscode/debug-input.txt",
                null
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'betterletters'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=betterletters",
                    "--package=betterletters"
                ],
                "filter": {
                    "name": "betterletters",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
